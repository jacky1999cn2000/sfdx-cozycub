<aura:component description="Game Setup Container" implements="flexipage:availableForAllPageTypes" access="global">
    
    <aura:attribute name="gameon" type="Boolean" default="true" access="private"/>

    <lightning:tabset variant="scoped">
        <lightning:tab label="Game Room">

            <div class="slds-grid slds-grid_vertical">

                <!-- header -->
                <div class="slds-col slds-p-bottom_small slds-border_bottom"> 

                    <div class="slds-grid slds-grid_align-space">

                        <aura:if isTrue="{!v.gameon == false}">
                            <div class="slds-col">
                                <lightning:button variant="brand" label="New Game" onclick="{!c.newGame}" />
                            </div>
                        </aura:if>

                        <aura:if isTrue="{!v.gameon == true}">
                            <div class="slds-col">
                                <div class="info">Game Name: Something</div>
                            </div>
                            <div class="slds-col">
                                <div class="info">Rounds: 2</div>
                            </div>
                            <div class="slds-col">
                                <div class="info">Bet: $3.00</div>
                            </div>
                        </aura:if>

                    </div>

                </div>

                <!-- content -->
                <div class="slds-col slds-p-top_small">
                    
                    <div class="slds-grid">

                        <div class="slds-col slds-size_3-of-12">

                            <div class="slds-grid slds-grid_vertical slds-grid_vertical-align-center" style="height: 100%;">
                                <div class="slds-col">
                                    <span>1</span>
                                </div>
                                <div class="slds-col">
                                    <span>2</span>
                                </div>
                                <div class="slds-col">
                                    <span>3</span>
                                </div>
                                <div class="slds-col">
                                    <span>4</span>
                                </div>
                            </div>

                        </div>
                        <div class="slds-col slds-size_6-of-12">
                            <span>2</span>
                        </div>
                        <div class="slds-col slds-size_3-of-12">
                            <span>3</span>
                        </div>

                    </div>

                </div>

            </div>

            
            <!-- <c:UtilDropDownWithFilter/> -->
            <c:ChallengeCreator aura:id="gamecreator"/>
            
        </lightning:tab>
        <lightning:tab label="Dashboard">
            Actions
        </lightning:tab>
     </lightning:tabset>

</aura:component>