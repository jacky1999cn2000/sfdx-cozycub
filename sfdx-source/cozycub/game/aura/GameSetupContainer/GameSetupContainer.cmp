<aura:component description="Game Setup Container" implements="flexipage:availableForAllPageTypes" access="global">
    
    <ltng:require scripts="{!$Resource.AuraPromise}" afterScriptsLoaded="{!c.init}" />

    <aura:attribute name="gameon" type="Boolean" default="false"/>
    <aura:attribute name="name" type="String" default=""/>
    <aura:attribute name="round" type="Integer" default="0"/>
    <aura:attribute name="currentRound" type="Integer" default="0"/>
    <aura:attribute name="bet" type="Decimal" default="0.0"/>

    <aura:attribute name="players" type="String"/>

    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:handler name="GameEvent" event="c:GameEvent" action="{!c.handleEvent}"/>

    <lightning:tabset variant="scoped">
        <lightning:tab label="Game Room">

            <div class="slds-grid slds-grid_vertical">

                <!-- header -->
                <div class="slds-col slds-p-bottom_small slds-border_bottom"> 
                    <c:GameHeader gameon="{!v.gameon}" name="{!v.name}" currentRound="{!v.currentRound}" totalRounds="{!v.round}" bet="{!v.bet}"/>
                </div>

                <!-- content -->
                <div class="slds-col slds-p-top_medium">
                    <c:Players gameon="{!v.gameon}" players="{!v.players}"/>
                </div>

            </div>

            
            <!-- <c:UtilDropDownWithFilter/> -->
            <!-- <c:ChallengeCreator aura:id="gamecreator"/> -->
            
        </lightning:tab>
        <lightning:tab label="Dashboard">
            Actions
        </lightning:tab>
     </lightning:tabset>

</aura:component>